<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <android.support.v7.widget.CardView android:id="@+id/cv_schedule"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:cardUseCompatPadding="true"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:padding="16dp">

            <TextView
                android:id="@+id/subject_id"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />

            <View
                android:background="#000000"
                android:id="@+id/vertical_line"
                android:layout_height="60dp"
                android:layout_alignLeft="@+id/beginning_time"
                android:layout_alignStart="@+id/beginning_time"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_toRightOf="@+id/subject_id"
                android:layout_toEndOf="@+id/subject_id"
                android:layout_width="1dp" />

            <TextView
                android:id="@+id/beginning_time"
                android:layout_below="@+id/subject_id"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <TextView
                android:id="@+id/subject_name"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/vertical_line"
                android:layout_toEndOf="@+id/vertical_line"
                android:layout_width="wrap_content" />

            <TextView
                android:id="@+id/teacher_name"
                android:layout_below="@+id/subject_name"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/vertical_line"
                android:layout_toEndOf="@+id/vertical_line"
                android:layout_width="wrap_content" />

            <TextView
                android:id="@+id/group_name"
                android:layout_below="@+id/teacher_name"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/vertical_line"
                android:layout_toEndOf="@+id/vertical_line"
                android:layout_width="wrap_content" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>

