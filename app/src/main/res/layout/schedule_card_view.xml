<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="16dp"
    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv_schedule"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            >
            <TextView
                android:id="@+id/subject_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                />
            <View
                android:id="@+id/vertical_line"
                android:layout_width="1dp"
                android:layout_height="60dp"
                android:background="#000000"
                android:layout_toRightOf="@+id/subject_id"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/beginning_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/subject_id"
                />
            <TextView
                android:id="@+id/subject_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/vertical_line"
                />
            <TextView
                android:id="@+id/teacher_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/subject_name"
                android:layout_toRightOf="@+id/vertical_line"
                />
            <TextView
                android:id="@+id/group_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/teacher_name"
                android:layout_toRightOf="@+id/vertical_line"
                />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>